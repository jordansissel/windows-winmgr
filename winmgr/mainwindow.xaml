<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" AllowsTransparency="True"
        ResizeMode="NoResize" Background="black" Foreground="White"> 
  <DockPanel>
    <TextBox DockPanel.Dock="Top" Name="userinput" Foreground="#FF88FF88"
             Background="Black" FontSize="14" Padding="5,5,5,5">
    </TextBox>

    <ListBox Name="results" Background="Transparent" Foreground="White"
             ScrollViewer.VerticalScrollBarVisibility="Hidden">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <DataTemplate.Resources>
            <Style TargetType="TextBlock">
              <Setter Property="FontSize" Value="14"/>
              <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>
          </DataTemplate.Resources>
          <Grid>
            <StackPanel>
              <TextBlock Margin="3,0,3,7" Text="{Binding Path=title}"/>
            </StackPanel>
          </Grid>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </DockPanel>
</Window>
